<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="简介:"
        android:textColor="@color/refresh_blue"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/tv_intro_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_intro"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="叶儿对很多朋友来说一直是一个传说，叶儿对很多朋友来说一直是一个传说，叶儿对很多朋友来说一直是一个传说" />

    <TextView
        android:id="@+id/tv_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_intro_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="用料:"
        android:textColor="@color/refresh_blue"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/tv_materials_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_materials"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_dark_grey"
        android:textSize="17dp"
        tools:text="糯米粉、猪肉粒、叶儿粑叶子、豆腐" />

    <TextView
        android:id="@+id/tv_practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_materials_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="做法:"
        android:textColor="@color/refresh_blue"
        android:textSize="21dp" />
</RelativeLayout>