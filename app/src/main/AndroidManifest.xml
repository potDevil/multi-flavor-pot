<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fuzhihuangcom.kotlin">

    <!--网络访问-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--地理访问-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_pot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.example.fuzhihuangcom.kotlin.activity.SplashActivity"
            android:screenOrientation="portrait">
            <!--android:theme="@style/Theme.AppStartLoad"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页-->
        <activity
            android:name="com.example.fuzhihuangcom.kotlin.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!--大图显示页-->
        <activity
            android:name="com.example.fuzhihuangcom.kotlin.activity.ImageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!--城市选择页-->
        <activity
            android:name="com.example.fuzhihuangcom.kotlin.activity.ChoiceCityActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!--美食列表页-->
        <activity
            android:name="com.example.fuzhihuangcom.kotlin.activity.CateListActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>
</manifest>